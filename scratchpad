let
    Source = Excel.CurrentWorkbook(){[Name="YourTableName"]}[Content],
    
    // Step 1: Group by Namespace and CleanedPackage
    Grouped = Table.Group(Source, {"Namespace", "CleanedPackage"}, {
        {"AllVersions", each Text.Combine(List.Transform([Version], Text.From), ", "), type text}
    }),
    
    // Step 2: Pivot the CleanedPackage column
    Pivoted = Table.Pivot(Grouped, List.Distinct(Grouped[CleanedPackage]), "CleanedPackage", "AllVersions", each Text.Combine(List.Distinct({Text.From(_)}), ", ")),
    
    // Optional: Replace nulls with empty string
    Cleaned = Table.ReplaceValue(Pivoted, null, "", Replacer.ReplaceValue, Table.ColumnNames(Pivoted))
in
    Cleaned
