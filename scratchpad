let
    // Step 1: Load your table (change the table name as needed)
    Source = Excel.CurrentWorkbook(){[Name="YourTableName"]}[Content],

    // Step 2: Combine all versions by Namespace and CleanedPackage
    Grouped = Table.Group(Source, {"Namespace", "CleanedPackage"}, {
        {"CombinedVersions", each Text.Combine(List.Transform([Version], Text.From), ", "), type text}
    }),

    // Step 3: Pivot CleanedPackage â€” no aggregation function needed
    Pivoted = Table.Pivot(
        Grouped,
        List.Distinct(Grouped[CleanedPackage]),
        "CleanedPackage",
        "CombinedVersions"
    ),

    // Step 4: Replace nulls with blanks (optional)
    Cleaned = Table.ReplaceValue(Pivoted, null, "", Replacer.ReplaceValue, Table.ColumnNames(Pivoted))
in
    Cleaned
